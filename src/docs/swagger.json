        "parameters":[
          {
            "name": "token",
            "in": "header",
            "description": "Token de acesso",
            "required": true,
            "schema": {
              "properties": {
                "authorization": {
                  "type": "string"
                }
              }
            }
          },
          {
            "name": "id",
            "in": "path",
            "description": "Id do user",
            "required": true
          }
        ],

        "requestBody": {
          "description": "Atualiza um usuário",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "example": {
                "displayName": "jhon",
                "email": "test@test.com",
                "password": "123456789"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Atualizado com sucesso.",
            "content":{
              "application/json":{
                "schema":{
                  "$ref": "#/components/schemas/userResponse"
                }
              }
            }
          },

          "404": {
            "description": "User not found",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                    "menssage": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                    "menssage": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Busca o usuário pelo seu id",
        "description": "Este endpoint busca um usuário pelo seu id",
        "tags": [
          "User"
        ],
        "parameters":[
          {
            "name": "id",
            "in": "path",
            "description": "Id do usuário",
            "required": true
          }
        ],

        "responses": {
          "200": {
            "description": "Busca realizada com sucesso.",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                    "menssage": {
                      "$ref": "#/components/schemas/userResponse"
                    }
                  }
                }
              }
            }
          },

          "404": {
            "description": "User not found",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                    "menssage": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Deleta o usuário",
        "description": "Este endpoint deleta o usuário que estiver logado",
        "security": [{ "bearerAuth": [] }],
        "tags": [
          "User"
        ],
        "parameters":[
          {
            "name": "token",
            "in": "header",
            "description": "Token de acesso",
            "required": true,
            "schema": {
              "properties": {
                "authorization": {
                  "type": "string"
                }
            
              }
            }
          },
          {
            "name": "id",
            "in": "path",
            "description": "Id do usuário",
            "required": true
          }
        ],

        "responses": {
          "200": {
            "description": "Deletado com sucesso.",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                    "menssage": {
                      "$ref": "#/components/schemas/userDeleteResponse"
                    }
                  }
                }
              }
            }
          },

          "401": {
            "description": "Unauthorized",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                    "menssage": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },

          "404": {
            "description": "User not found",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                    "menssage": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/posts": {
      "post": {
        "summary": "Cria novos posts",
        "description": "Cria novos posts vinculado ao usuário logado",
        "security": [{ "bearerAuth": [] }],
