                  }
                 }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                    "menssage": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                    "menssage": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Lista todos os posts",
        "description": "Retorna um array com todos os posts",
