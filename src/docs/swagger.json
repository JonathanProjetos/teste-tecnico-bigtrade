          },

          "401": {
            "description": "Unauthorized",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                    "menssage": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },

          "404": {
            "description": "Not Found",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                    "menssage": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/posts/{id}": {
      "get": {
        "summary": "Busca o post pelo id",
        "description": "Este endpoint busca um post pelo id",
        "tags": [
          "Posts"
        ],
        "parameters":[
          {
            "name": "id",
            "in": "path",
            "description": "Id do post",
            "required": true
          }
        ],

        "responses": {
          "200": {
            "description": "Busca realizada com sucesso.",
            "content":{
