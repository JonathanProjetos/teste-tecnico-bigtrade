                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          
          "401": {
            "description": "Unauthorized",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                    "menssage": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Deleta o post",
        "description": "Este endpoint deleta o post vinculado ao usuário",
        "security": [{ "bearerAuth": [] }],
        "tags": [
          "Posts"
        ],
        "parameters":[
          {
            "name": "token",
            "in": "header",
            "description": "Token de acesso",
            "required": true,
            "schema": {
              "properties": {
                "authorization": {
                  "type": "string"
                }
            
              }
            }
          },
          {
            "name": "id",
            "in": "path",
            "description": "Id do post",
            "required": true
          }
        ],

        "responses": {
          "200": {
            "description": "Deletado com sucesso.",
            "content":{
